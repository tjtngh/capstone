<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/page1"
   >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:id="@+id/back"
        android:layout_gravity="center_horizontal"
        android:onClick="adclick1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="개인 정보"
        android:id="@+id/info"
        android:layout_marginLeft="100dp"
        android:onClick="btninfo"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="사용자 계정"
        android:id="@+id/textView4"
        android:layout_marginTop="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:id="@+id/pwupdate"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true"
        android:onClick="pwupdate"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="접근권한"
        android:id="@+id/becon"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/pwupdate"
        android:layout_centerHorizontal="true"
        android:onClick="beaconinfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문열기"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="opendoor"
        android:background="#ffff0000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문닫기"
        android:id="@+id/button3"
        android:onClick="closedoor"
        android:background="#ffff0000"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="servicestart"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료"
        android:layout_above="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="serviceend"
        android:id="@+id/serviceend"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page2"
        android:visibility="gone"
        android:onClick="page2click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   아이디"
            android:id="@+id/id"
            android:textSize="30dp"
            android:hint="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       이름"
            android:id="@+id/name"
            android:textSize="30dp"
            android:layout_below="@+id/id"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       부서"
            android:id="@+id/department"
            android:textSize="30dp"
            android:layout_below="@+id/name"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       직급"
            android:id="@+id/rank"
            android:textSize="30dp"
            android:layout_below="@+id/department"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="접근권한"
            android:id="@+id/AC"
            android:textSize="30dp"
            android:layout_below="@+id/rank"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teid"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/id"
            android:paddingTop="7dp"
            android:paddingLeft="2dp"
            android:textColor="#ff000000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_below="@+id/teid"
            android:id="@+id/edname"
            android:paddingTop="20dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/department"
            android:layout_below="@+id/edname"
            android:id="@+id/eddepart"
            android:paddingTop="10dp"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rank"
            android:layout_below="@+id/eddepart"
            android:id="@+id/edrank"
            android:paddingTop="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/AC"
            android:layout_below="@+id/edrank"
            android:id="@+id/teac"
            android:paddingTop="20dp"
            android:textSize="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/turn"
            android:text="뒤로가기"
            android:onClick="turn"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/teac" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="수정"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/turn"
            android:onClick="update"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page3"
        android:visibility="gone"
        android:onClick="page3click">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pw1"
            android:text="   현재비밀번호"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pw2"
            android:text="변경할비밀번호"
            android:layout_below="@+id/pw1"
            android:textSize="20dp"
            android:paddingTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pw3"
            android:text="   비밀번호확인"
            android:layout_below="@+id/pw2"
            android:textSize="20dp"
            android:paddingTop="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pw1ed"
            android:layout_toRightOf="@+id/pw1"
            android:password="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pw2ed"
            android:layout_toRightOf="@+id/pw2"
            android:layout_below="@+id/pw1"
            android:paddingTop="20dp"
            android:password="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pw3ed"
            android:layout_toRightOf="@+id/pw3"
            android:layout_below="@+id/pw2"
            android:paddingTop="20dp"
            android:password="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/turn2"
            android:onClick="page3back"
            android:text="뒤로가기"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/page3update"
            android:text="수정"
            android:onClick="page3update"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/turn2" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page4"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beaconlist"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:id="@+id/page4back"
            android:onClick="page4back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/asdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>