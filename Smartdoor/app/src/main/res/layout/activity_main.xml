<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.login.MainActivity"
    android:id="@+id/rela1"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/asdf"
       >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 화면"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/rela2"
        android:layout_below="@+id/textView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="    아이디"
            android:id="@+id/textView2"
            android:layout_alignParentStart="true"
            android:textSize="30dp"

            android:textColor="#ff000000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/textView2"
            android:id="@+id/edittext"/>

    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rela2"
    android:id="@+id/rela3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="비밀번호"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ff000000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/textView3"
        android:id="@+id/edittext2"
        android:password="true"/>

</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rela3"
    android:id="@+id/relativeLayout">

</RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:id="@+id/login"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:onClick="Click1"
            android:layout_below="@+id/rela3"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:id="@+id/info"
            android:background="#ff0ff0ff"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:onClick="Click2"
            android:layout_below="@+id/rela3"
            android:layout_toEndOf="@+id/login" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동 로그인"
            android:textSize="20dp"
            android:layout_below="@+id/login"
            android:layout_alignStart="@+id/login"
            android:id="@+id/checkbox"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slidingPage01"
    android:onClick="slidingPage01click"
    android:visibility="gone"
   >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    아이디"
        android:textSize="30dp"
        android:id="@+id/id"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 비밀번호 "
        android:textSize="30dp"
        android:id="@+id/password"
        android:layout_below="@+id/id"
        android:paddingTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        이름"
        android:textSize="30dp"
        android:id="@+id/name"
        android:layout_below="@+id/password"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         부서"
        android:textSize="30dp"
        android:id="@+id/department"
        android:layout_below="@+id/name"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         직급"
        android:textSize="30dp"
        android:id="@+id/rank"
        android:layout_below="@+id/department"
        android:paddingTop="20dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editid"
        android:layout_toRightOf="@+id/id"
        android:layout_toLeftOf="@+id/same"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/editid"
        android:id="@+id/editpassword"
        android:password="true"
        android:paddingTop="25dp"
        android:layout_toRightOf="@+id/password"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/editpassword"
        android:id="@+id/editname"
        android:paddingTop="25dp"
        android:layout_toRightOf="@+id/name"
       />
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editname"
    android:id="@+id/editdepartment"
    android:paddingTop="25dp"
    android:layout_toRightOf="@+id/department"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editdepartment"
        android:id="@+id/editrank"
        android:paddingTop="25dp"
        android:layout_toRightOf="@+id/rank"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주의 : 아이디, 비밀번호 최대 10자리"
        android:textColor="#ffff0000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textSize="30dp"
        android:id="@+id/but1"
        android:onClick="but1click"
        android:nestedScrollingEnabled="true"
        android:gravity="center"
        android:layout_below="@+id/editrank"
        android:layout_alignStart="@+id/editpassword" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:onClick="onButton1Clicked"
        android:visibility="gone"
        android:textSize="30dp"
        android:layout_gravity="bottom"
        android:layout_alignTop="@+id/but1"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복검사"
        android:id="@+id/same"
        android:onClick="sameclick"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
       />

</RelativeLayout>

</RelativeLayout>
